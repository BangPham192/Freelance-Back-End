<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="20250614_add_jobs_table" author="bang.pham">
        <createTable tableName="jobs">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="public_id" type="binary(16)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="title" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="longtext">
                <constraints nullable="false"/>
            </column>
            <column name="budget_min" type="decimal(12,2)">
                <constraints nullable="false"/>
            </column>
            <column name="budget_max" type="decimal(12,2)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="varchar(10)" defaultValue="OPEN">
                <constraints nullable="false"/>
            </column>

            <column name="client_id" type="bigint">
                <constraints foreignKeyName="fk_user_roles_client_id" references="users(id)" nullable="false"/>
            </column>

            <column name="created_at" type="datetime"/>
            <column name="updated_at" type="datetime"/>
        </createTable>
        <modifySql dbms="mysql">
            <append value="engine innodb"/>
        </modifySql>
    </changeSet>
</databaseChangeLog>