<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="20250614_add_job_skills_table" author="bang.pham">
        <createTable tableName="job_skills">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="job_id" type="bigint">
                <constraints foreignKeyName="fk_job_skills_job_id" references="jobs(id)" nullable="false"/>
            </column>
            <column name="skill_id" type="bigint">
                <constraints foreignKeyName="fk_job_skills_skill_id" references="skills(id)" nullable="false"/>
            </column>
            <column name="created_at" type="datetime"/>
            <column name="updated_at" type="datetime"/>
        </createTable>
        <modifySql dbms="mysql">
            <append value="engine innodb"/>
        </modifySql>
    </changeSet>
</databaseChangeLog>